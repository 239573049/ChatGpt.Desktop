@using BlazorComponent.I18n
@namespace ChatGpt.Shared
@inject I18n I18n
<MFooter App
         Color="transparent"
         Height="72"
         Inset>
    <MTextField 
                Dark="ChatGptOptions.Dark" 
                HideDetails="@("true")"
                Class="@(ChatGptOptions.Dark?"dark":"white")"
                @bind-Value="value"
                OnKeyDown="async (e) => await KeySubmit(e)"
                Solo></MTextField>

    <MTooltip Top>
        <ActivatorContent>
            <MButton Dark="ChatGptOptions.Dark" Style="margin-left:8px;" @attributes="@context.Attrs" Text OnClick="OnClick">
                <MIcon>fas fa-solid fa-paper-plane</MIcon>
            </MButton>
        </ActivatorContent>
        <ChildContent>
            @I18n.T("SendMessageHint")
        </ChildContent>
    </MTooltip>

</MFooter>

<style>
    .dark input {
        color: aliceblue !important;
    }

    .white input {
        color: black !important;
    }
</style>